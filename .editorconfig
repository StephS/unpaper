# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

charset = utf-8

[*.{c,h}]
cpp_indent_braces = false
cpp_space_pointer_reference_alignment = right
